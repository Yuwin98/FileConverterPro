<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/detailsCardEnd"
        motion:constraintSetStart="@id/detailsCardStart"
        motion:duration="200">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/fileDetailsCardView"
               motion:framePosition="0"
               android:alpha="0" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/detailsCardStart">
        <Constraint
            android:id="@+id/fileDetailsCardView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="700dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/detailsCardEnd">
        <Constraint
            android:id="@+id/fileDetailsCardView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />
    </ConstraintSet>
</MotionScene>