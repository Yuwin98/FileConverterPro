<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="convertedFile"
            type="com.yuwin.fileconverterpro.db.ConvertedFile" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fileGridRootLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/filesGridParentLayout"
            changeSelectedGridItemColor="@{convertedFile.selected}"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/fileListGridImageView"
                loadThumbnailFromUri="@{convertedFile}"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/gridConvertedFileItemImageViewDescription"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/ic_folder_black_" />

            <TextView
                android:id="@+id/fileListGridTextView"
                fileNameGridAdapter="@{convertedFile.fileName}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#CB121212"
                android:backgroundTint="@color/colorDateTypeSize"
                android:fontFamily="@font/allerta"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>