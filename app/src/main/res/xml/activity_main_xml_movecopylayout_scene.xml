<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/moveCopyEnd"
        motion:constraintSetStart="@id/moveCopyStart"
        motion:duration="300">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/moveCopyStart">
        <Constraint
            android:id="@+id/moveCopyBackground"
            motion:layout_constraintEnd_toEndOf="@id/moveCopyLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            motion:layout_constraintBottom_toBottomOf="@id/moveCopyLayout"
            android:visibility="visible"
            motion:layout_constraintTop_toTopOf="@id/moveCopyLayout"
            motion:layout_constraintStart_toStartOf="@id/moveCopyLayout"
            android:translationY="0dp" />
        <Constraint
            android:id="@+id/moveCopyItemCountConstraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="0dp" />
        <Constraint
            android:id="@+id/moveCopyCancelConstraintLayout"
            motion:layout_constraintEnd_toStartOf="@id/moveCopyActionConstraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            motion:layout_constraintTop_toTopOf="parent"
            android:translationY="0dp" />
        <Constraint
            android:id="@+id/moveCopyActionConstraintLayout"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            motion:layout_constraintTop_toTopOf="parent"
            android:translationY="0dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/moveCopyEnd">
        <Constraint
            android:id="@+id/moveCopyBackground"
            motion:layout_constraintEnd_toEndOf="@id/moveCopyLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            motion:layout_constraintBottom_toBottomOf="@id/moveCopyLayout"
            android:visibility="visible"
            motion:layout_constraintTop_toTopOf="@id/moveCopyLayout"
            motion:layout_constraintStart_toStartOf="@id/moveCopyLayout"
            android:translationY="120dp" />
        <Constraint
            android:id="@+id/moveCopyItemCountConstraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="120dp" />
        <Constraint
            android:id="@+id/moveCopyCancelConstraintLayout"
            motion:layout_constraintEnd_toStartOf="@id/moveCopyActionConstraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            motion:layout_constraintTop_toTopOf="parent"
            android:translationY="120dp" />
        <Constraint
            android:id="@+id/moveCopyActionConstraintLayout"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            motion:layout_constraintTop_toTopOf="parent"
            android:translationY="120dp" />
    </ConstraintSet>
</MotionScene>